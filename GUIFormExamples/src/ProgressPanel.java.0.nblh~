/**
 *
 * @author samsung
 */
public class ProgressPanel extends javax.swing.JPanel implements Runnable{

    File f;
    FileInputStream fin;
    FileChannel srcFileChannel;
    
    FileOutputStream fout;
    FileChannel destFileChannel;
   
    ByteBuffer bf;
    
    long fileSize;
    Thread thread;
    
    int bytes=0;
    
    public ProgressPanel() {
        initComponents();
    }

    void copy(String src,String dest) throws Exception
    {
         fin=new FileInputStream(src);
         fout=new FileOutputStream(dest);
        thread=new Thread(this);
        thread.start();
    }
    public void run()
    {
        try
        {
          
           srcFileChannel=fin.getChannel();
           destFileChannel=fout.getChannel();
           fileSize=srcFileChannel.size();
           int blockSize=1024*1024;
           bf=ByteBuffer.allocate(blockSize);
           bar.setMaximum((int)fileSize);
           bytes=0;
           int read=0;
           do
           {
               bytes=srcFileChannel.read(bf,(read*blockSize));
               bf.flip();
               destFileChannel.write(bf,(read*blockSize));
               bar.setValue(bytes);
               Thread.sleep(200);
               read++;
           }while((read*blockSize)-fileSize < 0);
            fin.close();
            fout.close();
            JOptionPane.showMessageDialog(null,"File Copied SuccessFully.");
        }catch(Exception e)
        {
            e.printStackTrace();
        }
    }
    public static void main(String args[]) throws ClassNotFoundException, InstantiationException, IllegalAccessException, UnsupportedLookAndFeelException
    {
        
        JFrame f=new JFrame("File Progress");
        ProgressPanel p=new ProgressPanel();
        f.setSize(250,150);
        f.setLocation(50,50);
        f.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        f.add(p);
        
        UIManager.setLookAndFeel("com.sun.java.swing.plaf.nimbus.NimbusLookAndFeel");
        SwingUtilities.updateComponentTreeUI(f);
        f.setVisible(true);
        try {
            p.copy("F:/TEIT6thsem/6thSemSyllabus.xps","F:/6thSemSyllabus.xps");
        } catch (Exception ex) {
            Logger.getLogger(ProgressPanel.class.getName()).log(Level.SEVERE, null, ex);
        }
        
    }
    
    
